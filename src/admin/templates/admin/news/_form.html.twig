{% form_theme form 'form/fields.html.twig' %}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="row">
    <div class="col">
        {{ form_widget(form) }}
    </div>
    {% if news.capa is not null  %}
        <div class="col">
            <img src="{{ asset(path_news ~ 'capa/' ~ news.capa) | imagine_filter('thumb_medium') }}" class="capa" />
        </div>
    {% endif %}
</div>
<button class="btn btn-primary float-right save">{{ button_label|default('Salvar') }}</button>
{{ form_end(form) }}