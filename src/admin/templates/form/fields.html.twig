{% block form_row %}
    {% spaceless %}
        <div class="form-group">
            {{ form_label(form) }}
            <div class="text-danger">
                {{ form_errors(form) }}
            </div>
            {{ form_widget(form, { 'attr' : {'class': 'form-control'} }) }}
        </div>
    {% endspaceless %}
{% endblock form_row %}