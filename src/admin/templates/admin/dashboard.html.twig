{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html">Dashboard</a>
        </li>
    </ol>
    <div class="row">
        <div class="col-12">
            <h1>Dashboard</h1>

            <div class="col-lg-12">
                <div class="mb-0 mt-4">
                    <i class="fa fa-newspaper-o"></i> News Feed</div>
                <hr class="mt-2">
                <div class="row">
                    {% for new in news %}
                        <div class="col">
                            <div class="card mb-3 float-left">
                                <a href="{{ path('admin_news_edit', {'id': new.id}) }}">
                                    <img src="{{ asset(path_news ~ 'capa/' ~ new.capa) | imagine_filter('thumb_new_dashboard') }}" />
                                </a>
                                <div class="card-body">
                                    <h6 class="card-title mb-1"><a href="{{ path('admin_news_edit', {'id': new.id}) }}">{{ new.title }}</a></h6>
                                    <p class="card-text small">
                                        {{ new.description }}
                                    </p>
                                </div>
                                <hr class="my-0">
                                <div class="card-body py-2 small">
                                    <a class="mr-3 d-inline-block" href="{{ path('admin_news_edit', {'id': new.id}) }}">
                                        <i class="fa fa-pencil-square-o"></i> Editar
                                    </a>
                                </div>
                                <div class="card-footer small text-muted">Posted 1 hr ago</div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col">Não há notícias cadastradas</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}